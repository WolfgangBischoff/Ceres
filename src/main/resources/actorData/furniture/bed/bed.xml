

<root name="bed">
    <dialogue id="sleep" type="normal" nextDialogue="sleep-decision">
        <line>Do you want to spend the remaining day in your capsule?</line>
    </dialogue>

    <dialogue id="sleep-decision" type="decision">
        <option nextDialogue="decision_nextDay">Rest till next day.</option>
        <option nextDialogue="start_night_shift">Rest till night shift.</option>
        <option>[back]</option>
    </dialogue>

    <dialogue id="decision_nextDay" type="technical" daychange="">
        <line>Technical</line>
    </dialogue>

    <dialogue id="start_night_shift" type="normal" levelchange="transporter/transporter" spawnID="default" timechange="16"/>
</root>


