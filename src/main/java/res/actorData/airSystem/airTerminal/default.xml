<root name="actorName">
    <dialogue id="INIT_online" type="normal">
        <line>The system is %%GRonline%%</line>
    </dialogue>

    <dialogue id="INIT_offline" type="normal" nextDialogue="REPAIR_OPTION">
        <line>The system is %%RDoffline%% ...</line>
    </dialogue>

    <dialogue id="REPAIR_OPTION" type="decision">
        <option nextDialogue="ERROR_LOG">[Check error log]</option>
        <option nextDialogue="SOFT_RESTART">[%%VTInitialize soft restart%%]</option>
        <option>[Leave]</option>
    </dialogue>

    <dialogue id="ERROR_LOG" nextDialogue="REPAIR_OPTION">
        <line>Error 0451: Increased pressure due to pipe system blockage. Initiated emergency shutdown protocol.</line>
    </dialogue>

    <dialogue id="SOFT_RESTART" type="discussion" game="air_control" success="SOFT_RESTART_SUCCESS"
              defeat="SOFT_RESTART_FAIL"/>
    <dialogue id="SOFT_RESTART_SUCCESS" spritestatus="ON">
        <line>System reboot initiated ...</line>
        <line>Restoring air pressure ...</line>
        <line>System reboot ... Done</line>
    </dialogue>
    <dialogue id="SOFT_RESTART_FAIL" spritestatus="OFF">
        <line>System reboot failed ...</line>
    </dialogue>

</root>


