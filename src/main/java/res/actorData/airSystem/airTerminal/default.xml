<root name="actorName">
    <dialogue id="INIT_online" type="normal">
        <line>The system is online</line>
    </dialogue>

    <dialogue id="INIT_offline" type="normal" nextDialogue="REPAIR_OPTION">
        <line>The system is offline ...</line>
    </dialogue>

    <dialogue id="REPAIR_OPTION" type="decision">
        <option nextDialogue="ERROR_LOG">[Check error log]</option>
        <option nextDialogue="SOFT_RESTART">[Initialize soft restart]</option>
        <option>[Leave]</option>
    </dialogue>

    <dialogue id="ERROR_LOG" nextDialogue="REPAIR_OPTION">
        <line>Error 0451: Increased pressure due to pipe system blockage. Initiated emergency shutdown protocol.</line>
    </dialogue>

    <dialogue id="SOFT_RESTART" spritestatus="ON">
        <line>System reboot initiated ...</line>
        <line>Restoring air pressure ... </line>
        <line>System reboot ... Done</line>
    </dialogue>


