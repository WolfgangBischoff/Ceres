<root name="actorName">
    <dialogue id="INIT_online" type="normal">
        <line>The system is %%GRonline%%</line>
    </dialogue>

    <dialogue id="INIT_offline" type="normal" nextDialogue="REPAIR_OPTION">
        <line>The system is %%RDoffline%% ...</line>
    </dialogue>

    <dialogue id="REPAIR_OPTION" type="decision">
        <option nextDialogue="ERROR_LOG">[Check error log]</option>
        <option nextDialogue="SOFT_RESTART" type="boolean" variablename="AIR_SYSTEM_REBOOT_PART1_WON" visibleIf="false">[%%VTReboot Operation System%%]</option>
        <option nextDialogue="START_ENGINE" type="boolean" variablename="AIR_SYSTEM_REBOOT_PART1_WON" visibleIf="true">[%%VTStart Ventilation Engine%%]</option>
        <option>[Leave]</option>
    </dialogue>

    <dialogue id="ERROR_LOG" nextDialogue="REPAIR_OPTION" knowledge="AIR_SYSTEM_CONTROL_COMPUTE_TRAIT">
        <line>Error 0451: Increased pressure due to pipe system blockage. Initiated emergency shutdown protocol.</line>
    </dialogue>

    <dialogue id="SOFT_RESTART" type="discussion" game="air_control" success="SOFT_RESTART_SUCCESS"
              defeat="SOFT_RESTART_FAIL"/>
    <dialogue id="SOFT_RESTART_SUCCESS" variablename="AIR_SYSTEM_REBOOT_PART1_WON" set="true" nextDialogue="REPAIR_OPTION">
        <line>System reboot initiated ...</line>
        <line>System reboot ... Done</line>
        <line>..but the %%RDventilation engine%% is still down..</line>
    </dialogue>
    <dialogue id="SOFT_RESTART_FAIL" spritestatus="OFF" nextDialogue="REPAIR_OPTION">
        <line>System reboot failed ...</line>
    </dialogue>


    <dialogue id="START_ENGINE" type="discussion" game="air_control_2" success="START_ENGINE_SUCCESS"
              defeat="SOFT_RESTART_FAIL"/>
    <dialogue id="START_ENGINE_SUCCESS" spritestatus="ON">
        <line>Starting ventilation engine ...</line>
        <line>Engine %%GRfully operational%% ...</line>
        <line>System reboot ... Done</line>
    </dialogue>
    <dialogue id="START_ENGINE_FAIL" spritestatus="OFF" nextDialogue="REPAIR_OPTION">
        <line>Engine could not start ...</line>
    </dialogue>

</root>


