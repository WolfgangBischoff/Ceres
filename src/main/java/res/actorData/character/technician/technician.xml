<root name="technician">

    <dialogue id="INTRO_TO_MEDIC" type="normal" dialogueId="INTRO_TO_MEDIC_REPEAT">
        <line>Good Morning! The medic wants to talk to you, she waits in the %%VTControl Room%%!</line>
    </dialogue>

    <dialogue id="INTRO_TO_MEDIC_REPEAT" type="normal">
        <line>She waits in the %%VTControl Room%%! Go to her, dont let her wait</line>
    </dialogue>


    <dialogue id="init-door" type="decision">
        <option nextDialogue="door-info">Whats behind this door?</option>
        <option nextDialogue="door-discussion">Can you open the door?</option>
        <option nextDialogue="GET_ALGAE">Give me some algae!</option>
        <option>[Leave]</option>
    </dialogue>

    <dialogue id="GET_ALGAE" type="normal" item_actor="collectibles/food/food" item_name="Algae Stew"
              item_status="algaeStew">
        <line>Here is your algae stew!</line>
    </dialogue>

    <dialogue id="door-info" type="normal" nextDialogue="init-door">
        <line>Its the life support systems, but nobody has access without a good reason.</line>
    </dialogue>

    <dialogue id="door-discussion" type="normal" nextDialogue="discussion-game">
        <line>If you don't have a good reason stop bothering me.</line>
    </dialogue>

    <dialogue id="discussion-game" type="decision">
        <option nextDialogue="game-test">[Tell him, that you need access]</option>
        <option nextDialogue="game-test2">[Test II]</option>
        <option nextDialogue="game-test3">[Test III]</option>
        <option nextDialogue="init-door">[Go away]</option>
    </dialogue>

    <dialogue id="game-test" type="discussion" game="lifesupport" success="game-success" defeat="game-defeat"/>
    <dialogue id="game-test2" type="discussion" game="circles" success="game-success" defeat="game-defeat"/>
    <dialogue id="game-test3" type="discussion" game="test" success="game-success" defeat="game-defeat"/>

    <dialogue id="game-success" type = "normal">
        <line>Ok, ist ja gut. Geh einfach rein.</line>
        <line>[Opens the door]</line>
    </dialogue>
    <dialogue id="game-defeat" type = "normal">
        <line>Absolutely not, I am not convinced</line>
        <line>[You could not convince him, maybe you should talk more to get more familiar]</line>
    </dialogue>

</root>

